@using iTest.Web.Models.AccountViewModels
@model iTest.Web.Models.AccountViewModels.RegisterViewModel

<div class="valign-wrapper row">
    <div class="col s10 pull-s1 m6 pull-m3 l4 pull-l4">
        <form>
            <div>
                <h2>Register</h2>
                <hr/>
                <div class="row">
                    <div class="input-field col s12">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="validate" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="input-field col s12">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="validate" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-field col s12">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="validate" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="center-align">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
